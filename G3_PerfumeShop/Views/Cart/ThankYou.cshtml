﻿<div class="container mt-5">
    <h2>Cảm ơn bạn đã mua hàng!</h2>

    <p>@ViewBag.ShippingAddress</p>

    <!-- Form thông tin trang thank you -->
    <h4>Thông tin đơn hàng:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm </th>
                <th>Kích thước</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tổng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.ProductSizePricing.Product.Name</td>
                    <td>@item.ProductSizePricing.Size</td>
                    <td>@item.ProductSizePricing.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.ProductSizePricing.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
    <div style="text-align: center; margin-top: 20px;">
        <a href="https://localhost:7175/order/myorder" class="view-order-button" style="text-decoration: none; padding: 10px 20px; background-color: #FF7F50; color: white; border-radius: 5px; font-weight: bold;">Xem đơn hàng</a>
    </div>
</div>

