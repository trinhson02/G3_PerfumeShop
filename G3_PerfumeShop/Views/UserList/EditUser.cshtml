@model EditUserViewModel
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }

    h2 {
        color: #333;
        text-align: center; /* Căn giữa tiêu đề */
        margin-bottom: 20px; /* Khoảng cách dưới tiêu đề */
    }

    form {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 15px;
    }

    div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #555;
    }

    input[type="text"],
    input[type="password"],
    input[type="date"],
    select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 14px;
    }

        input[type="text"]:focus,
        input[type="password"]:focus,
        input[type="date"]:focus,
        select:focus {
            border-color: #007bff;
            outline: none;
        }

    span.text-danger {
        color: #e74c3c;
        font-size: 12px;
    }

    button {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        width: 100%; /* Đưa nút về chiều rộng 100% */
        margin-top: 10px; /* Khoảng cách trên nút */
    }

        button:hover {
            background-color: #0056b3;
        }

    a {
        display: inline-block;
        margin-top: 10px;
        text-decoration: none;
        color: #007bff;
        text-align: center; /* Căn giữa liên kết */
        width: 100%; /* Đưa liên kết về chiều rộng 100% */
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h2>Chỉnh sửa Người dùng</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Id" />

    <div >
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>

    <div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>

    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label asp-for="Phone"></label>
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>
    </div>

    <div>
        <label asp-for="Birthdate"></label>
        <input asp-for="Birthdate" type="date" />
        <span asp-validation-for="Birthdate"></span>
    </div>

    <div>
        <label>Giới tính</label>
        <select asp-for="Gender">
            <option value="1">Male</option>
            <option value="2">Female</option>
        </select>
    </div>

    <div >
        <label asp-for="StatusId"></label>
        <select asp-for="StatusId" asp-items="@(new SelectList(Model.Statuses, "Id", "Name"))">
            <option value="">Chọn trạng thái</option>
        </select>
        <span asp-validation-for="StatusId" class="text-danger"></span>
    </div>

    <button type="submit">Lưu</button>
    <a asp-action="Index">Hủy</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
